@inherits LayoutComponentBase

<AuthorizeView Roles="admin">
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <div class="main">
                <div class="top-row px-4 auth">
                    <LoginDisplay />
                </div>

                <div class="content px-4">
                    @Body
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center alert alert-warning"><i class="oi oi-warning"></i> You are not authorized to view this page.</div>
    </NotAuthorized>
</AuthorizeView>
